{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build all C and A files",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/philo/src/*.c",
				"${workspaceFolder}/philo/src/**/**/*.c",
				"${workspaceFolder}/philo/src/**/*.c",
                "-I${workspaceFolder}/philo/include",
                "-o",
                "${workspaceFolder}/philo.out",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "build all philo_bonus C files",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/philo_bonus/src/*.c",
                "${workspaceFolder}/philo_bonus/src/**/**/*.c",
                "${workspaceFolder}/philo_bonus/src/**/*.c",
                "-I${workspaceFolder}/philo_bonus/include",
                "-o",
                "${workspaceFolder}/philo_bonus.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}
